<GuiXml>
    <Controls>
        <Control name="ZO_ActionTile_Keyboard_Control" inherits="ZO_Tile_Keyboard_Control" virtual="true">
            <Controls>
                <Control name="$(parent)Container" override="true">
                    <Controls>
                        <Label name="$(parent)Header" override="true" font="ZoFontWinH4" />

                        <Label name="$(parent)Title" override="true" font="ZoFontWinH2" />

                        <Button name="$(parent)ActionButton" inherits="ZO_DefaultButton">
                            <Dimensions x="200" />
                            <Anchor point="TOP" relativeTo="$(parent)Background"  relativePoint="BOTTOM" offsetY="-15" />
                        </Button>
                    </Controls>
                </Control>
            </Controls>
        </Control>

        <!-- Generic Keyboard Tile Elements -->
        <Backdrop name="ZO_AnnouncementTileHighlight_Keyboard" centerColor="00000000" alpha="0" layer="0" level="9" blendMode="ADD" virtual="true">
            <Edge file="EsoUI/Art/Market/market_highlightEdge16.dds" edgeFileWidth="128" edgeFileHeight="16" />
            <Anchor point="TOPLEFT" offsetX="5" offsetY="5"/>
            <Anchor point="BOTTOMRIGHT" offsetX="-5" offsetY="-5"/>
        </Backdrop>
    </Controls>
</GuiXml>
