<GuiXml>
    <Controls>
        <TopLevelControl name="ZO_ActivityTracker">
            <Anchor point="TOPLEFT" relativeTo="ZO_FocusedQuestTrackerPanelContainerQuestContainer" relativePoint="BOTTOMLEFT" />
            <Anchor point="TOPRIGHT" relativeTo="ZO_FocusedQuestTrackerPanelContainerQuestContainer" relativePoint="BOTTOMRIGHT" />
            
            <OnInitialized>
                ZO_ActivityTracker_OnInitialized(self)
            </OnInitialized>

            <Controls>
                <Control name="$(parent)Container" resizeToFitDescendents="true">
                    <Anchor point="TOPRIGHT" />

                    <Controls>
                        <Label name="$(parent)Header" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" hidden="true"/>

                        <Label name="$(parent)Status" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" hidden="true"/>
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>